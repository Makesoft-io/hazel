<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Browser Toolbar -->
    <com.webviewer.firetv.BrowserToolbarView
        android:id="@+id/browserToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/toolbar_margin_horizontal"
        android:layout_marginTop="@dimen/tv_action_safe_margin"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- WebView Container with rounded corners -->
    <androidx.cardview.widget.CardView
        android:id="@+id/webViewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/webview_card_margin"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/tv_action_safe_margin"
        android:visibility="gone"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browserToolbar">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <!-- Welcome/Error Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/welcome_background"
        android:padding="@dimen/tv_title_safe_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Welcome Content -->
        <LinearLayout
            android:id="@+id/welcomeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/welcomeActions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <!-- App Icon/Logo -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/large_spacing"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App Icon" />

            <!-- Welcome Title -->
            <TextView
                android:id="@+id/welcomeTitle"
                style="@style/WelcomeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_spacing"
                android:text="Welcome to Web Dev Viewer"
                android:textAlignment="center" />

            <!-- Status Message -->
            <TextView
                android:id="@+id/statusMessage"
                style="@style/StatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_padding"
                android:maxWidth="600dp"
                android:text="Configure your development server to get started"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/welcomeActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_spacing"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeContent">

            <TextView
                android:id="@+id/connectButton"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/item_spacing"
                android:focusable="true"
                android:nextFocusRight="@+id/settingsButton"
                android:text="Connect"
                android:visibility="gone" />

            <TextView
                android:id="@+id/retryButton"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/item_spacing"
                android:focusable="true"
                android:nextFocusRight="@+id/settingsButton"
                android:text="@string/retry"
                android:visibility="gone" />

            <TextView
                android:id="@+id/settingsButton"
                style="@style/SecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:nextFocusLeft="@+id/retryButton"
                android:text="@string/settings" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="@dimen/loading_spinner_size"
            android:layout_height="@dimen/loading_spinner_size"
            android:indeterminateTint="@color/accent"
            app:layout_constraintBottom_toTopOf="@+id/loadingText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/loadingText"
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_spacing"
            android:text="@string/loading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadingSpinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Error Console Overlay temporarily removed for stability -->
    <!-- <com.webviewer.firetv.ErrorConsoleOverlay
        android:id="@+id/errorConsoleOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> -->

</androidx.constraintlayout.widget.ConstraintLayout>