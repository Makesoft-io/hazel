<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Active state (auto-refresh enabled) -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/accent" />
            <stroke android:width="2dp" android:color="@color/accent_dark" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/surface_elevated" />
            <stroke android:width="3dp" android:color="@color/accent" />
        </shape>
    </item>
    
    <!-- Inactive/Normal state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/surface" />
            <stroke android:width="1dp" android:color="@color/surface_variant" />
        </shape>
    </item>
    
</selector>